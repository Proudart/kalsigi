{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(npm install:*)",
      "Bash(npm run lint)",
      "Bash(rm:*)",
      "Bash(npx tsc:*)",
      "Bash(npm cache clean:*)",
      "Bash(npm uninstall:*)",
      "Bash(curl:*)",
      "Bash(npm run dev:*)",
      "Bash(./node_modules/.bin/mcp-server-puppeteer)",
      "Bash(npx next dev:*)",
      "WebFetch(domain:localhost)",
      "WebFetch(domain:10.255.255.254)",
      "Bash(sudo apt-get:*)",
      "Bash(sudo apt-get install:*)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "mcpServers": {
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "env": {
        "PUPPETEER_LAUNCH_OPTIONS": "{ \"headless\": false, \"args\": [\"--disable-web-security\"] }",
        "ALLOW_DANGEROUS": "true"
      }
    }
  }
}