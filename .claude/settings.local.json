{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(npm install:*)",
      "Bash(npm run lint)",
      "Bash(rm:*)",
      "Bash(npx tsc:*)",
      "Bash(npm cache clean:*)",
      "Bash(npm uninstall:*)",
      "Bash(curl:*)",
      "Bash(npm run dev:*)",
      "Bash(./node_modules/.bin/mcp-server-puppeteer)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "mcpServers": {
        "puppeteer": {
          "command": "npx",
          "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
        }
      },
      "puppeteer-mcp-claude": {
      "command": "npx",
      "args": ["puppeteer-mcp-claude", "serve"],
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
      
    