# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/kalsigi

# Node Environment
NODE_ENV=development

# Site Configuration
SITE_NAME=YourSiteName
site_name=YourSiteName
NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# Authentication
BETTER_AUTH_SECRET=your-secret-key-generate-with-openssl-rand-base64-32

# Analytics (Optional)
# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://eu.posthog.com

# Plausible Analytics
PLAUSIBLE=yourdomain.com

# Cloudflare Turnstile (Bot Protection)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key

# AWS S3 / Cloudflare R2 Configuration
R2_PUBLIC_URL=https://your-cdn-url.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_BASE_PATH=images

# Sitemap Configuration
SITEMAP_START_DATE=2025-01-01
SITEMAP_BACKDATE_FROM=2025-01-01

# Development Tools
# Set to true to analyze bundle size during build
ANALYZE=false

# Optional: Email Configuration (if implementing email features)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@yourdomain.com

# Optional: Redis Configuration (for caching and rate limiting)
# REDIS_URL=redis://localhost:6379
